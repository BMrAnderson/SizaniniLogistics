@model RegisterContractorViewModel

@{
    ViewData["Title"] = "Register Contractor";
}

<div class="container">
    <h2>Register Contractor</h2>

    <form asp-controller="Contractor" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Contractor.Name">Name:</label>
            <input asp-for="Contractor.Name" type="text" class="form-control" id="Contractor_Name" name="Contractor.Name" required>
        </div>
        <div class="form-group">
            <label asp-for="Contractor.EmailAddress">Email Address:</label>
            <input asp-for="Contractor.EmailAddress" type="email" class="form-control" id="Contractor_EmailAddress" name="Contractor.EmailAddress" required>
        </div>
        <div class="form-group">
            <label asp-for="Contractor.PhoneNumber">Phone Number:</label>
            <input asp-for="Contractor.PhoneNumber" type="text" class="form-control" id="Contractor_PhoneNumber" name="Contractor.PhoneNumber" required>
        </div>
        <button type="submit" class="btn btn-success">Register</button>
    </form>
</div>
