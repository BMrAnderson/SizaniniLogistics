@model RegisterVehicleViewModel

@{
    ViewData["Title"] = "Register Vehicle";
}

<div class="container">
    <h2>Register Vehicle</h2>

    <form asp-controller="Vehicle" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Vehicle.Type">Type:</label>
            <input asp-for="Vehicle.Type" type="text" class="form-control" id="Vehicle_Type" name="Vehicle.Type" required>
        </div>
        <div class="form-group">
            <label asp-for="Vehicle.RegistrationNumber">Registration Number:</label>
            <input asp-for="Vehicle.RegistrationNumber" type="text" class="form-control" id="Vehicle_RegistrationNumber" name="Vehicle.RegistrationNumber" required>
        </div>
        <div class="form-group">
            <label asp-for="Vehicle.Model">Model:</label>
            <input asp-for="Vehicle.Model" type="text" class="form-control" id="Vehicle_Model" name="Vehicle.Model" required>
        </div>
        <div class="form-group">
            <label asp-for="Vehicle.Weight">Weight:</label>
            <input asp-for="Vehicle.Weight" type="number" class="form-control" id="Vehicle_Weight" name="Vehicle.Weight" required>
        </div>
        <button type="submit" class="btn btn-success">Register</button>
    </form>
</div>
